{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["ES2019", "DOM"],
    "module": "CommonJS",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "importHelpers": true
  },
  "include": ["./test", "scripts", "src", "utils"],
  "files": ["./hardhat.config.ts"]
}
